# Maintainer: krepa098 <krepa098@gmail.com>

_pkgname=stl2thumbnail_rs
pkgname=stl2thumbnail-kde-git
pkgver=v0.99.r35.g0d7464f
pkgrel=1
pkgdesc="Enables Dolphin to generate thumbnails for STL files"
arch=("i686" "x86_64")
url="https://github.com/krepa098/stl2thumbnail_rs"
license=("GPL")
groups=()
depends=('stl2thumbnail')
makedepends=("git" "rust" "cmake" "extra-cmake-modules" "kio5")
source=("$_pkgname::git+$url.git#branch=master")
md5sums=("SKIP")
options=('staticlibs')

_gitname="stl2thumbnail_rs"
_gitbranch="master"

pkgver() {
  cd "${_pkgname}"
  git describe --long --tags | sed "s/\([^-]*-g\)/r\1/;s/-/./g"
}

build() {
  cd ${_pkgname}
  mkdir build 
  cd build
  cmake -DCMAKE_BUILD_TYPE=Release -DGNOME=OFF -DKDE=ON ..
  make package
}

package() {
  # copy build artifacts
  cp ${_pkgname}/build/stl2thumbnail-*-core.deb ${pkgdir}/core.deb
  cp ${_pkgname}/build/stl2thumbnail-*-kde.deb ${pkgdir}/gnome.deb

  # extract data
  cd ${pkgdir}
  ar p core.deb data.tar.gz | tar zx
  ar p gnome.deb data.tar.gz | tar zx

  # cleanup
  rm *.deb
}